 @model Noticia
    @{
        ViewData["Title"] = "Notícias";
    }

 <div class="titulo_pagina">
            <h1>cadastro de @ViewData["Title"]</h1>
        </div>

    <form class="cadastro" action="@Url.Action("Cadastrar")" method="post" enctype="multipart/form-data">


    <div class="campo">
    <label for="IdNoticia">IdNoticia</label>
    <input type="text" name="IdNoticia" id="IdNoticia">
    </div>

    <div class="campo">
    <label for="Titulo">Titulo</label>
    <input type="text" name="Titulo" id="Titulo">
    </div>

    <div class="campo">
    <label for="Texto">Texto</label>
    <input type="text" name="Texto" id="Texto">
    </div>

    <div class="campo">
    <label for="Imagem">Imagem</label>
    <input type="file" name="Imagem" id="Imagem">
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>

</form>

<table>
    <thead>
        <th>ID</th>
        <th>Título</th>
        <th>Texto</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @foreach(Noticia n in ViewBag.Noticias){
            <tr>
                <td>@n.IdNoticia</td>
                <td>@n.Titulo</td>
                <td>@n.Texto</td>
                <td>
                    <img src="img/Noticias/@n.Imagem" alt="Imagem da Noticia @n.Titulo"/>
                </td>
                <td>
                <a asp-area="" asp-controller="Noticia" asp-action="Excluir" asp-route-id="@n.IdNoticia">
                    <i class="fa fa-trash"></i>
                </a>
                </td>
            </tr>
        }
    </tbody>
</table>